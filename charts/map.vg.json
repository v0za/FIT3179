{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "config": {
    "style": {
      "cell": {
        "stroke": "transparent"
      }
    }
  },
  "width": "container",
  "height": "container",
  "title": "Total Billionaire's Networth by Country",
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/v0za/FIT3179/main/data/countries_topo.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  
  "layer": [
   
    {
      "data": {
        "url": "https://raw.githubusercontent.com/v0za/FIT3179/main/data/ocean_topo.json",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "lightblue"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/v0za/FIT3179/main/data/graticules_topo.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "gray"}
    },

    {
      "mark": {"type": "geoshape", "stroke": "black"}
    },

    {
  "data": {"url": "https://raw.githubusercontent.com/v0za/FIT3179/main/data/output.csv"},
  "mark": {"type": "circle", "color": "orange"},
  "encoding": {
    "longitude": {"field": "Longitude", "type": "quantitative"},
    "latitude": {"field": "Latitude", "type": "quantitative"},
    "size": {"field": "TotalNetWorth(B)", "type": "quantitative"},
    "tooltip": [
      {"field": "Country", "type": "nominal", "title": "Country"},
      {"field": "TotalNetWorth(B)", "type": "quantitative", "title": "Total Net Worth $(B)"}
    ]
  }
}

    
  ]
}
